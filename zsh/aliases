alias hyprl='nvim $HOME/.config/hypr/hyprland.conf'
alias hyprp='nvim $HOME/.config/hypr/hyprpaper.conf'
alias p10='nvim $HOME/.p10k.zsh'
alias vic='nvim $HOME/.config/nvim/init.vim'
